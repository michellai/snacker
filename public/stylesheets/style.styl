/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
//@import url('http://fonts.googleapis.com/css?family=Quicksand')
@font-face
   font-family "Quicksand"
   font-style normal
   src url('../fonts/quicksand/Quicksand-Regular.ttf')


@font-face
   font-family "Garamond Italic"
   font-style normal
   src url('../fonts/Garamond Italic.ttf')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
//background-color = #faf9f0
background-color = #fff

body
  font-family 'Georgia'
  background-color background-color
  background-image url('../images/angelcake_sm.png')
  color #444

header
  font-family 'Quicksand'
  padding 10px 10px
  color #333
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  //background-color main-color
  background-image url('../images/angelcake_sm.png')
  border-bottom 1px solid darken(main-color, 30%)
  //text-shadow 0px -1px 0px darken(main-color, 30%)

.logoline
  background-color rgba(255,255,255, 1)
  font-family "Garamond Italic", Verdana, Tahoma
  font-size 18px
  letter-spacing 10px
  display inline

.tagright
  padding-left 2%
  vertical-align 50px

.tagleft
  padding-right 2%
  vertical-align 50px

.homelink
  //display: inline;
  height 119px

.container
  width 500px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 300px
  font-family 'Quicksand'

  .read
    left 15%
  .write
    left 40%
  .snack
    left 65%

  .bubble
    max-width 100%
    max-height 80%
    position fixed
    padding 7%;

  .shadow
    border-radius 100%
    -webkit-border-radius 100%
    -moz-border-radius 100%
    background-color rgb( 108, 203, 252 )

  .shadow:hover
      visibility hidden

  a.pushme
    border-radius 100%
    -webkit-border-radius 100%
    -moz-border-radius 100%
    background-color rgb( 35, 242, 250 )
    //vertical-align middle

  .pushme:hover
    background-color rgb( 255, 248, 175)
    text-decoration none

  p.choice
    color white
    position absolute
    top 35%
    vertical-align middle

      

.sidebar
  float left
  width 200px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    display none
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color background-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    h1
      font-family 'Quicksand'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

  p
  line-height 1.8
  display none